<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="bundle_form_view">
            <field name="name">Form view for bundle</field>
            <field name="model">mqo.bundle</field>
            <field name="inherit_id" ref="mqo_bundle.bundle_form_view"/>
            <field name="arch" type="xml">
	            <xpath expr="//group[@string='basic_info']" position="inside">
                	<field name="product_templates">
                    	<tree string="Product template">
                   			<field name="name"/>
                   		</tree>
                	</field>
	            </xpath>
	        </field>
		</record>
    </data>
</openerp>


